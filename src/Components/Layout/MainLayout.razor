@inherits LayoutComponentBase

<div class="bb-page" >
    <Toasts class="p-3" AutoHide="true" Delay="4000" Placement="ToastsPlacement.TopRight" />
    <Sidebar @ref="sidebar"
             IconName="IconName.BootstrapFill"
             Title="Ticket Management"
             DataProvider="SidebarDataProvider" 
             />

    <main>
        <div class="bb-top-row px-4 d-flex justify-content-around navbar-brand">
            <marquee class="company-name">National Art Museum, Bhaktapur, Nepal </marquee>
        </div>
        <article class="content px-4">
            <div class="py-2">@Body</div>
        </article>
    </main>
</div>

<style>
    :root{
        --bb-sidebar-top-row-background-color: blue;
    }


    .navbar-brand {
        display: flex;
        align-items: center;
        padding: 10px 20px;
    }

    .company-name {
        font-family: 'Poppins', sans-serif;
        font-size: 1.5rem;
        font-weight: bold;
        color: #333; /* Dark gray for a professional look */
        letter-spacing: 1px; /* Adds a slight spacing for elegance */
        text-transform: uppercase; /* Makes the name stand out */
    }

        /* Optional hover effect */
        .company-name:hover {
            color: #007bff; /* Subtle blue hover effect */
            text-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
</style>

@code {
    Sidebar sidebar;
    IEnumerable<NavItem> navItems;

    private async Task<SidebarDataProviderResult> SidebarDataProvider(SidebarDataProviderRequest request)
    {
        if (navItems is null)
            navItems = GetNavItems();

        return await Task.FromResult(request.ApplyTo(navItems));
    }

    private IEnumerable<NavItem> GetNavItems()
    {
        navItems = new List<NavItem>
                   {
                       new NavItem { Id = "1", Href = "/ticket", IconName = IconName.PlusSquareFill, Text = "Ticket"},
                       new NavItem { Id = "2", Href = "/ticket-settings", IconName = IconName.GearFill, Text = "Ticket Settings"},
                       new NavItem { Id = "3", Href = "/settings", IconName = IconName.PlusSquareFill, Text = "Settings"},
                       new NavItem { Id = "4", Href = "/settings", IconName = IconName.PlusSquareFill, Text = "Logout"},
                       new NavItem { Id = "5", Href = "/settings", Text = " © Hubizen Innovations", Class="position-absolute bottom-0 start-0"}


                   };

        return navItems;
    }
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
